{
   "author" : "Maroš Kollár",
   "category" : "device_enhancements",
   "defaults" : {
      "description" : "__description__",
      "title" : "__title__",
      "unitTemperature" : "celsius"
   },
   "dependencies" : [],
   "homepage" : "http://k-1.com",
   "icon" : "icon.png",
   "maturity" : "stable",
   "moduleName" : "ThermostatControl",
   "options" : {
      "definitions": {
          "schedules": {
             "items": {
                 "fields": {
                     "presenceMode": {
                         "order": 1,
                         "type": "checkbox",
                         "label": "__presence_mode_label__",
                         "optionLabels": ["__presence_mode_home__","__presence_mode_away__","__presence_mode_vacation__","__presence_mode_night__"]
                     },
                     "dayofweek": {
                         "order": 2,
                         "type":"select",
                         "type": "checkbox",
                         "label": "__dayofweek_label__",
                         "optionLabels": ["__dayofweek_1__","__dayofweek_2__","__dayofweek_3__","__dayofweek_4__","__dayofweek_5__","__dayofweek_6__","__dayofweek_7__"]
                     },
                     "timeFrom": {
                         "order": 3,
                         "label": "__time_from_label__"
                     },
                     "timeTo": {
                         "order": 4,
                         "label": "__time_to_label__"
                     },
                     "setpoint": {
                         "label": "__setpoint_label__",
                         "order": 5,
                         "type": "number",
                         "required": true
                     }
                 }
             } 
          }
      },
      "fields": {
         "unitTemperature": {
            "label" : "__unit_temperature_label__",
            "optionLabels" : [
               "°C",
               "°F"
            ],
            "order": 1
         },
         "defaultTemperature": {
            "label": "__default_temperature_label__",
            "helper": "__default_temperature_helper__",
            "order": 2
         },
         "globalSetpoints": {
             "label": "__global_schedules_label__",
             "helper": "__global_schedules_helper__",
             "$ref": "#/definitions/schedules",
             "order": 3
         },
         "zones": {
             "order": 4,
             "label": "__zones_label__",
             "fields": {
                 "devices" : {
                     "fields" : {
                        "item" : {
                           "datasource" : "namespaces",
                           "field" : "devices",
                           "optionLabels" : "namespaces:devices_thermostat:deviceName",
                           "type" : "select"
                        }
                     },
                     "label" : "__devices_label__",
                     "order": 1
                  },
                 "schedules": {
                     "label": "__schedules_label__",
                     "order": 2,
                     "$ref": "#/definitions/schedules"
                 }
             }
         }
      }
   },
   "repository" : {
      "source" : "https://github.com/maros/Zway-ThermostatControl",
      "type" : "git"
   },
   "schema" : {
      "definitions": {
          "schedules": {
              "type": "array",
              "items": {
                  "type": "object",
                  "properties": {
                     "dayofweek": {
                        "type": "array",
                        "enum": ["1","2","3","4","5","6","7"]
                     },
                     "timeFrom": {
                         "type": "string",
                         "pattern" : "^([01]?[0-9]|2[0-3]):([0-5][0-9])$"
                     },
                     "timeTo": {
                         "type": "string",
                         "pattern" : "^([01]?[0-9]|2[0-3]):([0-5][0-9])$"
                     },
                     "presenceMode": {
                        "type": "array",
                        "enum": ["home","away","vacation","night"]
                     },
                     "setpoint": {
                        "type": "number",
                        "required": true
                     }
                  }
              }
          }
      },
      "properties" : {
          "unitTemperature" : {
              "enum" : [
                 "celsius",
                 "fahrenheit"
              ],
              "required" : true,
              "type" : "select"
           },
           "defaultTemperature": {
               "type" : "number",
               "required": true
           },
           "globalSetpoints": {
               "$ref": "#/definitions/schedules"
           },
           "zones": {
               "type": "array",
               "items":  {
                    "type": "object",
                    "properties": {
                        "devices": {
                            "items":  {
                                "required": true,
                                "datasource": "namespaces",
                                "field": "enum",
                                "enum" : "namespaces:devices_thermostat:deviceId"
                            },
                            "type": "array",
                            "minItems": 1,
                            "uniqueItems": true
                        },
                        "schedules": {
                            "$ref": "#/definitions/schedules"
                        }
                    }
               },  
               "minItems": 1
           }
      },
      "required" : true,
      "type" : "object"
   },
   "singleton" : false,
   "version" : "1.0.0"
}
